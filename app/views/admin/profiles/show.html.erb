<h1>My Profile</h1>

<%= link_to 'Edit Profile', edit_admin_profile_path, class: 'edit' %>

<table>
  <tbody>
    <tr class="name">
      <th>Name:</th>
      <td><%= current_user.full_name %></td>
    </tr>
    <tr class="region">
      <th>Region:</th>
      <td><%= current_user.region ? current_user.region.name : 'Unassigned' %></td>
    </tr>
  </tbody>
</table>


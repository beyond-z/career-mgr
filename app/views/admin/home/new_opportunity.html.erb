<h1>Add New Opportunity</h1>
<h2>Step 1: Choose an existing employer:</h2>

<form method="GET">
  <input type="text" name="q" placeholder="name" value="<%= params[:q] %>" class="search-box">
  <input type=submit value="search" class="search-box">
</form>

<% if @employers.present? %>
  <ul>  
    <% @employers.each do |employer| %>
      <li><%= link_to employer.name, new_admin_employer_opportunity_path(employer) %></li>
    <% end %>
  </ul>
<% end %>

<% if params[:q] %>
  <p><strong><%= link_to 'Clear search results', admin_new_opportunity_path %></strong> to see the full employer list.</p>
<% end %>

<h2>OR</h2>

<ul>
  <li><strong><%= link_to 'Add a New Employer', new_admin_employer_path(redirect: 'new_opportunity') %></strong></li>
</ul>
